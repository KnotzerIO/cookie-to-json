{
  "manifest_version": 2,
  "name": "__MSG_ext_name__",
  "description": "__MSG_ext_desc__",
  "version": "0.2.0",
  "icons": {
    "16": "icon/icon_16.png",
    "128": "icon/icon_128.png"
  },
  "default_locale": "ja",
  "browser_action": {

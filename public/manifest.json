{
  "manifest_version": 2,
  "name": "Cookie Monster",
  "description": "Cookie Monster is a browser extension that allows you to export cookies to a file or save them to the clipboard",
  "version": "1.0.0",
  "icons": {
    "16": "icon/icon_16.png",
    "24": "icon/icon_24.png",
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png",
    "256": "icon/icon_256.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_title": "Cookie Monster",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": ["tabs", "cookies", "http://*/*", "https://*/*"]
}

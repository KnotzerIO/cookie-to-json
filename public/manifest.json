  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
 "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
